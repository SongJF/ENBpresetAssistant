<UserControl x:Class="ENBpresetAssistant.Pages.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ENBpresetAssistant.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10,10">
        <StackPanel Orientation="Vertical">
            <materialDesign:Card
                Background="{DynamicResource PrimaryHueDarkBrush}"
                Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                Margin="10"
                Padding="8"
                MaxWidth="750"
                UniformCornerRadius="6">
                <StackPanel>
                    <TextBlock Style="{StaticResource MaterialDesignDisplay1TextBlock}">Theme</TextBlock>
                    <DockPanel  VerticalAlignment="Center" Margin="10,0">
                        <DockPanel Margin="10,10,0,10">
                            <TextBlock VerticalAlignment="Center" Style="{StaticResource MaterialDesignTitleTextBlock}">Light</TextBlock>
                            <ToggleButton Margin="8 0 16 0"  Click="BackGround_Click" IsChecked="{Binding isDark}" />
                            <TextBlock VerticalAlignment="Center" Style="{StaticResource MaterialDesignTitleTextBlock}">Dark</TextBlock>
                        </DockPanel>
                        <DockPanel Margin="10,0,10,0">
                            <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                                    Background="#9E9E9E"
                                    Name="grey"
                                    Margin="20,0"
                                    Click="Theme_Click">
                            </Button>
                            <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                                    Background="#2196F3"
                                    Name="blue"
                                    Margin="20,0"
                                    Click="Theme_Click">
                            </Button>
                            <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                                    Background="#3F51B5"
                                    Name="indigo"
                                    Margin="20,0"
                                    Click="Theme_Click">
                            </Button>
                            <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                                    Background="#795548"
                                    Name="brown"
                                    Margin="20,0"
                                    Click="Theme_Click">
                            </Button>
                            <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                                    Background="#673AB7"
                                    Name="deeppurple"
                                    Margin="20,0"
                                    Click="Theme_Click">
                            </Button>
                        </DockPanel>
                    </DockPanel>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card
                Background="{DynamicResource PrimaryHueDarkBrush}"
                Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                Margin="10"
                Padding="8"
                MaxWidth="750"
                UniformCornerRadius="6">
                <StackPanel>
                    <TextBlock Style="{StaticResource MaterialDesignDisplay1TextBlock}">Theme</TextBlock>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock VerticalAlignment="Center" Style="{StaticResource MaterialDesignTitleTextBlock}" Grid.Column="0" Grid.Row="0" Margin="10">TESV</TextBlock>
                        <TextBlock VerticalAlignment="Center" Style="{StaticResource MaterialDesignTitleTextBlock}" Grid.Column="0" Grid.Row="1" Margin="10">Storage</TextBlock>

                        <TextBox materialDesign:HintAssist.Hint="The Elder Scrolls V Path" Text="{Binding TESVPath, Mode=OneTime}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Grid.Column="1" Grid.Row="0" Margin="10" LostFocus="TESVTextBox_LostFocus" x:Name="TESVPath"/>
                        <TextBox materialDesign:HintAssist.Hint="Storge Path" Text="{Binding StoragePath, Mode=OneTime}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Grid.Column="1" Grid.Row="1" Margin="10" LostFocus="StorageTextBox_LostFocus" x:Name="StoragePath"/>

                        <Button
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="TESVPath_Click"
                            ToolTip="MaterialDesignFlatButton"
                            Margin="10"
                            Grid.Column="2" Grid.Row="0"
                            VerticalAlignment="Bottom">
                            <materialDesign:PackIcon Kind="FolderOpen" />
                        </Button>
                        <Button
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="StoragePath_Click"
                            ToolTip="MaterialDesignFlatButton"
                            Margin="10"
                            Grid.Column="2" Grid.Row="1"
                            VerticalAlignment="Bottom">
                            <materialDesign:PackIcon Kind="FolderOpen" />
                        </Button>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>
            
            
        </StackPanel>
    </Grid>
</UserControl>
