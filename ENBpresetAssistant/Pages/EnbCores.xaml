<UserControl x:Class="ENBpresetAssistant.Pages.EnbCores"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ENBpresetAssistant.Pages"
             xmlns:res="clr-namespace:ENBpresetAssistant.Data"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             lex:LocalizeDictionary.DesignCulture="{x:Static res:ID.English}"
             lex:ResxLocalizationProvider.DefaultAssembly="ENBpresetAssistant"
             lex:ResxLocalizationProvider.DefaultDictionary="CoreStr"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal">
        <StackPanel Orientation="Horizontal" x:Name="MainView"/>

        <Button 
            Style="{StaticResource MaterialDesignFloatingActionDarkButton}"
            ToolTip="MaterialDesignFloatingActionDarkButton"
            VerticalAlignment="Center" Margin="30"
            Click="AddBtn_Click">
            <materialDesign:PackIcon Kind="Plus" Height="24" Width="24" />
        </Button>
    </StackPanel>
</UserControl>
